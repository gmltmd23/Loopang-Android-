<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:descendantFocusability="blocksDescendants"
        android:background="@color/notice_list">
    <TextView
            android:text="@string/song_item_date_example"
            android:textColor="#838383"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notice_date"
            android:textSize="14sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/setting_notice_item_update_info"
            android:textColor="#838383"
            android:layout_below="@+id/notice_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notice_title"
            android:layout_alignStart="@+id/notice_date"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/notice_date"
            app:layout_constraintStart_toStartOf="@+id/notice_date" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
