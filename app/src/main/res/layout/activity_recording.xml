<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Recording">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/fragment_frame"
                android:layout_alignParentTop="true"
                android:layout_marginTop="46sp" android:layout_marginBottom="58sp" android:layout_marginLeft="14sp"
                android:layout_marginRight="14sp" android:foreground="#5B3F51B5">
        </FrameLayout>
        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17sp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>