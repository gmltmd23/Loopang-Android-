<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/title_music_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_music_title"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_music_title"/>

    <TextView
            android:id="@+id/txt_save_format_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_save_dialog"
            android:text="@string/sound_format_type" />

    <Spinner
            android:id="@+id/spinner_sound_format_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/spinner_file_type_kr"
            android:spinnerMode="dropdown" />
</LinearLayout>