<?xml version="1.0" encoding="utf-8"?>



        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="236dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/setMetronomeFrame"
        >

            <TextView
                    android:text=" Metronome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/textView4"
                    android:textSize="35dp"
                    android:textColor="#ffffff"
                    android:gravity="center"/>
            <TextView
                    android:text="BPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/textView2"
                    android:textSize="24dp"
                    android:textColor="#ffffff"/>
            <LinearLayout
                    android:background="@drawable/rounded"
                    android:layout_marginTop="10dp"
                    android:layout_width="213dp"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                <Button
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:id="@+id/btn_bpmDown"
                        android:background="#00000000"
                        android:text="-"
                        android:textSize="50dp"
                        android:textColor= "#ffffff"
                        android:gravity="center"
                />
                <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:id ="@+id/frameeeeeela">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background = "@android:color/transparent"
                            android:text="60"
                            android:id = "@+id/EditBpm"
                            android:textSize="35dp"
                            android:textColor="#ffffff"
                            android:maxLength="3"
                            android:inputType = "number"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:visibility="invisible"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/metronomeBpmText"
                            android:gravity="center"
                            android:text="100"
                            android:textSize="35dp"
                            android:inputType = "number"
                            android:textColor="#ffffff"/>
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_for_edit_bpm"
                            android:background="@android:color/transparent"/>

                </FrameLayout>
                <Button
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:id="@+id/btn_bpmUp"
                        android:background="#00000000"
                        android:text="+"
                        android:textSize="40dp"
                        android:textColor="#ffffff"
                        android:gravity="center"/>

            </LinearLayout>
            <TextView
                    android:text="Allegro"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:layout_width="213dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bpmTempo"
                    android:layout_gravity="center"
                    android:gravity=""
                    android:layout_marginStart="10dp"/>
            <TextView
                    android:text="NOTE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="5dp"
                    android:textSize="24dp"
                    android:textColor="#ffffff"
            />

            <ImageButton
                    android:layout_width="213dp"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_note"
                    android:src = "@drawable/note_4"
                    android:textSize ="35dp"
                    android:textColor="#ffffff"/>



    <TextView
                    android:text="VOLUME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="5dp"
                    android:textSize="24dp"
                    android:textColor="#ffffff"/>
            <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="210dp"
                    android:layout_height="25dp"
                    android:background="@drawable/rounded"
                   >

                <SeekBar
                        android:id="@+id/seekBar_setVolume"
                        android:layout_width="237dp"
                        android:layout_height="match_parent"
                        android:progressDrawable="@drawable/seekbar_progressbar"
                        android:layout_gravity="center"
                        android:progress="50"
                        android:thumbTintMode="multiply"
                        android:thumb="@android:color/transparent"
                        android:max="100"


                />
            </FrameLayout>
        </LinearLayout>
