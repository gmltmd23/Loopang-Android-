<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/final_storage_background"
        android:id="@+id/final_storage_layout"
>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Spinner
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:layout_marginStart="11dp"
                android:gravity="center"
                android:background="@drawable/icon_final_storage_round"
                android:id="@+id/final_loop_name_spinner"
                android:textSize="19dp"
                android:textColor="#FFFFFF"/>

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/icon_final_storage_play"
                android:id="@+id/btn_final_play"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="11dp">
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_gravity="top"
                    android:background="@drawable/icon_final_storage_round">

                    <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="33dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/icon_final_storage_record"
                            android:id="@+id/btn_final_record"/>
                    <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/icon_final_storage_stop"
                            android:id="@+id/btn_final_stop"/>
                </LinearLayout>
                <TextView
                        android:text="03:25:65"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView8"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#FFFFFF"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>