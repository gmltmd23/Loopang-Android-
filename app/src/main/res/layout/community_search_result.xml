<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/searchSort">


        <Button
                android:id="@+id/SearcgSongBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Song"
                android:textSize="18dp"
                android:textColor="#737373"
                android:background="#FFFFFF"/>

        <Button
                android:id="@+id/SearchArtistBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Atrist"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:background="@color/twenty_per_white"/>
    </LinearLayout>

    <ListView
            android:layout_below="@id/searchSort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:dividerHeight="10dp"
            android:divider=  "@android:color/transparent"
            android:id="@+id/community_search_result_listview"
            />

</LinearLayout>