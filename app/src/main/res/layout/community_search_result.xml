<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/searchSort">


        <Button
                android:id="@+id/SearchTagBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tag"
                android:textSize="18dp"
                android:textColor="#737373"
                android:background="#FFFFFF"/>

        <Button
                android:id="@+id/SearchUserBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

        <ListView
                android:layout_below="@id/searchSort"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="10dp"
                android:divider=  "@android:color/transparent"
                android:id="@+id/community_search_result_tag_listview"/>

            <ListView
                    android:id="@+id/community_search_result_user_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/searchSort"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="10dp" />

    </FrameLayout>
</LinearLayout>