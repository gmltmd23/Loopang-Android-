<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="82dp">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" android:id="@+id/waveform_frame" android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="parent">
        <com.treasure.loopang.view.WaveformView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/waveform_view"/>
        <com.treasure.loopang.view.IndicatorView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/indicator_view"/>

    </FrameLayout>
    <TextView
            android:text="@string/layer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"
            android:textSize="12sp" android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>