<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="100dp"
android:background="@drawable/effectorlist_background">


    <TextView
            android:text="Song Name"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content" android:id="@+id/myPageSongName"/>
    <TextView
        android:text="2019.08.11"
          android:textColor="#FFFFFF"
          android:textSize="14dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:layout_below="@id/myPageSongName"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"

    />
    <Button
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="16.26dp"
            android:layout_height="4.26dp"
            android:id="@+id/btn_share"
            android:background="@drawable/icon_btn_share"
            android:layout_marginEnd="30dp"
    />

</RelativeLayout>