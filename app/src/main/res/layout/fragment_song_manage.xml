<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SongManageFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music_list"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17sp"
            android:layout_marginLeft="23sp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="56sp"
            android:layout_marginLeft="14sp"
            android:layout_marginRight="14sp"
            android:id="@+id/song_search_bar"
            />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/song_search_bar"
            android:layout_marginTop="22sp"
            android:layout_marginBottom="18sp"
            android:layout_marginLeft="14sp"
            android:layout_marginRight="14sp"
            android:foreground="#5B3F5113"
    >
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/song_list"/>
    </FrameLayout>

</RelativeLayout>