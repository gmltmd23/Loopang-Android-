<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.treasure.loopang">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_loopang"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_loopang_round"
            android:supportsRtl="true"
            android:theme="@style/LoopangAppTheme">
        <activity android:name=".FinalRecordActivity"
                android:theme="@style/finalRecordActivityTheme"
                android:configChanges="orientation|screenSize">

        </activity>

        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".Login"></activity>
        <activity android:name=".Recording"
                android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".LoadingActivity"></activity>

        <activity android:name=".settingItemActivity"></activity>
        <activity android:name=".CommunityActivity"></activity>
        <activity android:name=".CommunityShareActivity"></activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts" />
    </application>

</manifest>